<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:text="News"
            android:textColor="@color/title_text_color"
            android:textSize="23sp"
            android:textStyle="normal" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="23dp">

                <FrameLayout
                    android:layout_width="146dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_first">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Short news title will be here"
                        android:textColor="@color/card_text_color"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="146dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_second">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Short news title will be here"
                        android:textColor="@color/card_text_color"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="146dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_third">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Short news title will be here"
                        android:textColor="@color/card_text_color"
                        android:textSize="12sp" />

                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="38dp"
            android:fontFamily="sans-serif-light"
            android:text="Daily Tasks:"
            android:textColor="@color/title_text_color"
            android:textSize="23sp"
            android:textStyle="normal" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="23dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="94dp"
                    android:layout_height="86dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="#F6F5FB"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_view_task_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="sans-serif"
                            android:text="Daily astromeditation"
                            android:textColor="#61598B"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/text_view_task_1_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="sans-serif-medium"
                            android:text="3"
                            android:textColor="#403572"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@id/text_view_task_1_label"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/text_view_task_1_label"
                            android:src="@drawable/ic_task"
                            app:tint="#403572" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="94dp"
                    android:layout_height="86dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="#FFF4F4"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_view_task_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="sans-serif"
                            android:text="Daily astromeditation"
                            android:textColor="#FF3726"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/text_view_task_2_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="sans-serif-medium"
                            android:text="1"
                            android:textColor="#FF5648"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@id/text_view_task_2_label"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/text_view_task_2_label"
                            android:src="@drawable/ic_task"
                            app:tint="#FF5648" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="94dp"
                    android:layout_height="86dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardBackgroundColor="#F5F9F9"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_view_task_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="sans-serif"
                            android:text="Daily astromeditation"
                            android:textColor="#479696"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/text_view_task_3_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="sans-serif-medium"
                            android:text="2"
                            android:textColor="#479696"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@id/text_view_task_3_label"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/text_view_task_3_label"
                            android:src="@drawable/ic_task"
                            app:tint="#479696" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:text="Your overall progress is 60%"
            android:textColor="@color/title_text_color"
            android:textSize="18sp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="12dp"
            android:max="100"
            android:progress="45"
            app:trackCornerRadius="4dp"
            app:trackThickness="6dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>